

<header class="navbar navbar-fixed-top navbar-inverse">

  <div class="navbar-inner">

    <div class="container">
      
            <%= form_tag events_path, :method => :get do %>
              <div style = "position:fixed;top:0px; left:400px;width:400px;">
              <%= text_field_tag :search, params[:search] %>
            </div>
              <div style = "position:fixed; top:10px; left:200px;padding-bottom:5px;">
              <%= submit_tag "Search for Event", :name => nil, class: "btn btn-info" %>
              </div>
              <% end %>
       
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path%></li>
         
          <% if signed_in? %>
            <li><%= link_to "Promotors", users_path %></li>
            
          
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
              </ul>
            </li>
            <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
          
          
   
        </ul>
      </nav>
    </div>
  </div>


</header>



<% provide(:title, @event.title) %>


<script type = "text/javascript">

eventYear = <%= @event.date.year %>;
eventMonth = <%= @event.date.mon %>;
eventDay = <%= @event.date.mday %>;


</script>

<div id="container">

    <h1><%= @event.title %></h1>
  <div><p id="note"></p></div>  
<div id="countdown"></div>

<div class="row">

   
  <div id = "photo">
    <%= image_tag @event.photo.url.to_s %>
  </div>

  <div >
    <ul>
    <p>
        <h3>
          <li>Date: <%= @event.date %></li>
          <li>Description: <%= @event.description %></li>
          <li>Contact Phone: <%= @event.contact_phone %></li>
          <li>Address: <%= @event.locality %></li>
          <li>Country: <%= @event.country %></li>
          <li>Website: <%= @event.url %></li>
        </h3>
      </p>

     </ul>
  </div> 

 


  <p>
     <%= link_to "Update", edit_event_path(@event) %>
     <%= link_to "Delete", @event, :method => :delete, :confirm => "Are you sure you want to delete this event?" %>
  </p>



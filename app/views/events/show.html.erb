<% provide(:title, @event.title) %>
<div class="row">

    <div>
      <h1>
        <%= @event.title %>
      </h1>
    </div>


  <div class="container-fluid">
    <ul class = "inline">
    <p>
        <h2>
          <li>Date: <%= @event.date %></li>
          <li>Description: <%= @event.description %></li>
          <li>Contact Phone: <%= @event.contact_phone %></li>
          <li>Address: <%= @event.address %></li>
          <li>Country: <%= @event.country %></li>
          <li>Latitude: <%= @event.latitude %></li>
          <li>Longitude: <%= @event.longitude %></li>
          <li>Website: <%= link_to @event.url %></li>
        </h2>
      </p>

     </ul>
  </div>
  <p>
     <%= link_to "Update", edit_event_path(@event) %>
     <%= link_to "Delete", @event, :method => :delete, :confirm => "Are you sure you want to delete this event?" %>
  </p>




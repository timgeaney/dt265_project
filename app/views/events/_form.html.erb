<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :category %>
      <%= f.text_field :category %>

      
      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :date %>
      <%= f.text_field :date %>

      
      

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>